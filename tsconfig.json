{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ESNext"
        ],
        "module": "CommonJS",
        "target": "ESNext",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "sourceMap": true
    },
    "include": [
        "src"
    ]
}
